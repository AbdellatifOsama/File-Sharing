@using File_Sharing.DAL.Entities;
@model UploadFileViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Upload";
}
<div class="my-4">
    <h1 class="text-primary upload-heading">Upload File</h1>
</div>
<form enctype="multipart/form-data" method="post" asp-action="Upload">
    <div id="upload-input" asp-validation-summary="All" class="alert alert-danger text-danger div-ul-mb-0 w-50"></div>
    <div class="input-group w-50">
        <input asp-for="@Model.File" type="file" class="form-control mb-3" id="uplaod-input"/>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Upload Setting</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="d-flex justify-content-between w-50">
                        <label asp-for="ShowUploaderName" class="form-check-label" for="flexSwitchCheckDefault"></label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="@Model.ShowUploaderName" role="switch" id="flexSwitchCheckDefault">
                        </div>
                    </div>
                    <div class="d-flex justify-content-between w-50">
                        <label asp-for="IsPrivate" class="form-check-label" for="flexSwitchCheckDefault"></label>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" asp-for="@Model.IsPrivate" role="switch" id="flexSwitchCheckDefault">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Confirm Upload</button>
                </div>
            </div>
        </div>
    </div>
    <button disabled id="upload-BTN" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Upload</button>
</form>
@section Scripts{
   @* Disable Button Until Input Field has Value*@
    <script>
        var uplaodInput = document.getElementById("uplaod-input");
        var uploadBTN = document.getElementById("upload-BTN");
        var uploadInput = document.getElementById("upload-input");
        uplaodInput.addEventListener("change", function () {
            if (uplaodInput.value == "") {
                uploadBTN.setAttribute("disabled", "true");
            }
            else {
                uploadBTN.removeAttribute("disabled");
            }
            console.log(uplaodInput.value);
        })
        if (uploadInput.childNodes[0].childNodes[0].textContent == "") {
            uploadInput.style.display = "none";
        }
    </script>
}